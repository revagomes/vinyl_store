<table border="1" celpadding="2">
  <tr>
    <th>Produto</th>
    <th>Qtd</th>
    <th>Preço</th>
    <th>Ações</th>
  </tr>
  <% for item in @order.order_items %>
  <tr>
    <td><%= item.product.name %></td>
    <td>
	  <input type="text" name="item[<%= item.id %>]" size="5" value="<%= item.quantity %>"/>
    </td>
    <td><%= item.total %></td>
    <td><%= link_to 'Excluir', :action => :remove, :id => item %></td>
  </tr>
  <% end %>
</table>